	<oad:uod rdf:about="uod/IT-ER-IBC-039009-001-004">
		<rdfs:label rdf:datatype="http://www.w3.org/2001/XMLSchema#string">Archivio della Congregazione di carità di Cotignola e delle opere pie amministrate</rdfs:label>
		<dc:title>Archivio della Congregazione di carità di Cotignola e delle opere pie amministrate</dc:title>
		<oad:title>Archivio della Congregazione di carità di Cotignola e delle opere pie amministrate</oad:title>
		<oad:has_level rdf:resource="levelOfDescription/otherlevel"/>
		<oad:has_otherlevel>fonds</oad:has_otherlevel>
		<oad:archivistsNote>scheda pubblicata</oad:archivistsNote>
