	<eac-cpf:relation rdf:about="relationCPF/IT-ER-IBC-SP00001-0000264_1">
		<rdfs:label rdf:datatype="http://www.w3.org/2001/XMLSchema#string">Andrea Costa associative relation with Serafino Mazzotti</rdfs:label>
		<eac-cpf:cpfRelationType>associative</eac-cpf:cpfRelationType>
		<dc:description>Andrea Costa è legato a Serafino Mazzotti da un profondo rapporto di amicizia. Tra il 1877 e il 1880 Mazzotti accoglie e ospita più volte Costa nella sua casa a Lugano.</dc:description>
		<dcterms:relation rdf:resource="eac-cpf/IT-ER-IBC-SP00001-0001003"/>
	</eac-cpf:relation>
	<eac-cpf:relation rdf:about="relationCPF/IT-ER-IBC-SP00001-0000264_2">
		<rdfs:label rdf:datatype="http://www.w3.org/2001/XMLSchema#string">Andrea Costa associative relation with Anna Kuliscioff</rdfs:label>
		<eac-cpf:cpfRelationType>associative</eac-cpf:cpfRelationType>
		<dc:description>Andrea Costa è legato ad Anna Kuliscioff da un intenso sodalizio sentimentale e intellettuale. Dalla loro relazione nel 1881 nasce Andreina.</dc:description>
		<dcterms:relation rdf:resource="eac-cpf/IT-ER-IBC-SP00001-0001004"/>
	</eac-cpf:relation>
	<eac-cpf:relation rdf:about="relationCPF/IT-ER-IBC-SP00001-0000264_3">
		<rdfs:label rdf:datatype="http://www.w3.org/2001/XMLSchema#string">Andrea Costa associative relation with Angelo Negri</rdfs:label>
		<eac-cpf:cpfRelationType>associative</eac-cpf:cpfRelationType>
		<dc:description>Andrea Costa è legato ad Angelo Negri da vincoli affettivi e politici: lo affianca e lo sostiene lungo la sua attività politica divenendo un punto di collegamento tra il deputato e la sua città natale.</dc:description>
		<dcterms:relation rdf:resource="eac-cpf/IT-ER-IBC-SP00001-0001002"/>
	</eac-cpf:relation>
	<eac-cpf:relation rdf:about="relationCPF/IT-ER-IBC-SP00001-0000264_4">
		<rdfs:label rdf:datatype="http://www.w3.org/2001/XMLSchema#string">Andrea Costa associative relation with Luigi Sassi</rdfs:label>
		<eac-cpf:cpfRelationType>associative</eac-cpf:cpfRelationType>
		<dc:description>Andrea Costa è legato a Luigi Sassi è legato da una profonda amicizia e da un sodalizio politico che li vedrà confluire insieme nel 1893 nel Partito socialista italiano.</dc:description>
		<dcterms:relation rdf:resource="eac-cpf/IT-ER-IBC-SP00001-0001022"/>
	</eac-cpf:relation>
	<eac-cpf:relation rdf:about="relationCPF/IT-ER-IBC-SP00001-0000264_5">
		<rdfs:label rdf:datatype="http://www.w3.org/2001/XMLSchema#string">Andrea Costa associative relation with Alfredo Xella</rdfs:label>
		<eac-cpf:cpfRelationType>associative</eac-cpf:cpfRelationType>
		<dc:description>Andrea Costa è legato da vincoli affettivi e politici ad Alfredo Xella che giovanissimo aderisce giovanissimo al Partito socialista.</dc:description>
		<dcterms:relation rdf:resource="eac-cpf/IT-ER-IBC-SP00001-0001020"/>
	</eac-cpf:relation>
	<eac-cpf:relation rdf:about="relationCPF/IT-ER-IBC-SP00001-0000264_6">
		<rdfs:label rdf:datatype="http://www.w3.org/2001/XMLSchema#string">Andrea Costa associative relation with Romeo Galli</rdfs:label>
		<eac-cpf:cpfRelationType>associative</eac-cpf:cpfRelationType>
		<dc:description>Andrea Costa è un punto di riferimento nella formazione politica di Romeo Galli. I due sono legati anche da rapporti di amicizia e di stima che si consolidano nel tempo.</dc:description>
		<dcterms:relation rdf:resource="eac-cpf/IT-ER-IBC-SP00001-0001024"/>
	</eac-cpf:relation>
	<eac-cpf:relation rdf:about="relationCPF/IT-ER-IBC-SP00001-0000264_7">
		<rdfs:label rdf:datatype="http://www.w3.org/2001/XMLSchema#string">Andrea Costa associative relation with Anselmo Marabini</rdfs:label>
		<eac-cpf:cpfRelationType>associative</eac-cpf:cpfRelationType>
		<dc:description>Andrea Costa è legato ad Anselmo Marabini da vincoli politici e affettivi.</dc:description>
		<dcterms:relation rdf:resource="eac-cpf/IT-ER-IBC-SP00001-0001026"/>
	</eac-cpf:relation>
